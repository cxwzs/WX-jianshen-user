/* pages/pay-success/pay-success.wxss */

.box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.box>image {
  width: 151rpx;
  height: 151rpx;
  margin-top: 110rpx;
}

.box-ts {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.box-money {
  font-size: 60rpx;
  color: rgba(51, 51, 51, 1);
  margin-top: 60rpx;
}

.box-btn-now {
  width: 450rpx;
  height: 88rpx;
  background: linear-gradient(0deg, rgba(251, 59, 57, 1), rgba(255, 161, 148, 1));
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  margin-top: 120rpx;
}

.box-btn-next {
  width: 450rpx;
  height: 88rpx;
  box-sizing: border-box;
  border: 2rpx solid rgba(236, 37, 37, 1);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(236, 37, 37, 1);
  margin-top: 30rpx;
}

/* 弹窗 */

.model {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mdoel-hide {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
}

.model-nr {
  width: 484rpx;
  height: 585rpx;
  position: relative;
  z-index: 4;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.model-nr>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 5;
}

.model-nr-center {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 6;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.model-nr-text {
  width: 420rpx;
  text-align: justify;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(236, 37, 37, 1);
  position: absolute;
  bottom: 197rpx;
}

.model-nr-btn {
  width: 290rpx;
  height: 80rpx;
  background: linear-gradient(0deg, rgba(251, 59, 57, 1), rgba(255, 161, 148, 1));
  border-radius: 40rpx;
  position: absolute;
  bottom: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.model-nr-btn>text{
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
.model-nr-btn>button{
  position: absolute;
  width: 100% !important;
  height: 100% !important;
  border: none !important;
  z-index: 99;
  padding: 0 !important;
}
.close-img {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: -100rpx;
}