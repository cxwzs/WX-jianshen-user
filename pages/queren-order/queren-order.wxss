/* pages/queren-order/queren-order.wxss */

.painterImg {
  position: fixed;
  left: 99999rpx;
  z-index: 0;
}
/* 分享购弹窗 */
.model {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.model-hide {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 100;
}

.model-img {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  position: relative;
  z-index: 101;
}

.model-img>image {
  width: 640rpx;
  height: 608rpx;
  background-color: #fff;
  border-radius: 20rpx;
  position: relative;
  z-index: 200;
}

.model-img>text {
  font-size: 28rpx;
  color: #fff;
  margin-top: 30rpx;
}
.model-nr{
  width: 100%;
  position: relative;
  z-index: 101;
}
.model-nr-btn{
  width: 100%;
  height:97rpx;
  background:rgba(255,255,255,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.model-nr-center{
  width: 100%;
  height:265rpx;
  background:rgba(246,246,246,1);
  border-radius:20rpx 20rpx 0rpx 0rpx;
  box-sizing: border-box;
  padding: 0 50rpx;
}
.model-nr-center-content{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.model-nr-center-btn{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.model-nr-center-btn>button{
  position: absolute;
  z-index: 103;
  width: 100% !important;
  height: 100% !important;
  padding: 0 !important;
  margin: 0 !important;
  border: none !important;
  /* background-color: rgba(0, 0, 0, 0); */
}
.model-nr-center-btn>image{
  width: 104rpx;
  height: 104rpx;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 102;
}
.model-nr-center-btn>text{
  font-size: 26rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  position: relative;
  z-index: 102;
}



.box{
  width: 100%;
  margin-top: 18rpx;
}
/* 用户信息 */
.user{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.user-center{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.user-bt{
  margin: 25rpx 0;
  font-size: 34rpx;
  color:rgba(51,51,51,1);
}
.user-inp{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 15rpx 0;
}
.user-inp>text{
  display: block;
  width: 150rpx;
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.user-inp>input{
  flex: 1;
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: right;
}
.inps{
  font-size: 30rpx;
  font-weight:400;
  color: #999999;
}
/* 项目信息 */
.project{
  width: 100%;
  box-sizing: border-box;
  padding: 48rpx 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.project-center{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.project-bt{
  font-size: 34rpx;
  color:rgba(51,51,51,1);
}
.project-nr{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.project-nr>image{
  width: 267rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 25rpx;
}
.project-text{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
}
.project-name{
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 30rpx;
  color:rgba(51,51,51,1);
  margin-top: 5rpx;
}
.project-time{
  font-size: 24rpx;
  font-weight:400;
  color:rgba(64,67,85,1);
  margin-top: 10rpx;
}
.project-price{
  position: absolute;
  bottom: 5rpx;
  font-size: 36rpx;
  color:rgba(236,37,37,1);
}
/* 底部按钮 */
.btn{
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
}
.btn>view{
  width: 50%;
  height: 98rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btn-share{
  background-color: #EC2525;
}
.btn-share>view{
  font-size: 32rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.btn-share>text{
  font-size: 22rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.btn-pay{
  font-size: 32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  background-color: #FFFFFFFF;
}