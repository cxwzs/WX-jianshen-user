/* pages/project-detail/project-detail.wxss */
page{
  background-color: #f6f6f6;
}
.wxParse-p>image{
  width: 100% !important;
}
.box{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 广告图 */
.top{
  width: 100%;
}
.top>video{
  width: 100%;
  height: 422rpx;
}
/* 项目信息 */
.project{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  background-color: #fff;
}
.project-nr{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 20rpx;
  position: relative;
}
.project-btn{
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  align-items: center;
}
.project-btn>view{
  width: 32rpx;
  height: 32rpx;
  position: relative;
}
.btn-share{
  margin-right: 50rpx
}
.btn-share>button{
  position: absolute;
  z-index: 3;
  width: 100% !important;
  height: 100% !important;
  background-color: rgba(153,153,153,0);
  padding: 0 !important;
  margin: 0 !important;
  top: 0;
  left: 0;
}
.project-btn>view>image{
  width: 32rpx;
  height: 32rpx;
  position: relative;
  z-index: 1;
}

.project-bt{
  font-size: 36rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 20rpx;
}
.project-bq{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.project-bq>text{
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  background:#F8F8FC;
  border-radius:4rpx;
  margin: 10rpx;
  font-size: 22rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
/* 标题 */
.biaoti{
  font-size: 34rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-top: 40rpx;
}
.title{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.title>text{
  font-size: 36rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.title-more{
  display: flex;
  align-items: center;
}
.title-more>text{
  font-size: 24rpx;
  color: #999999;
  font-family:PingFang SC;
}
.title-more>image{
  width: 11rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
/* 课时信息 */
.course{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
course-nr{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.course-list{
  width: 100%;
}
.course-list-item{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #f6f6f6;
}
.course-list-item:last-of-type{
  border-bottom: none;
}
.course-list-item>view{
  width: 33.33%;
}
.course-list-item-name{
  font-size: 30rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.course-list-item-price{
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.course-list-item-price>view{
  font-size: 36rpx;
  font-weight:bold;
  color:rgba(236,37,37,1);
  display: block;
  margin-right: 10rpx;
}
.course-list-item-price>text{
  display: block;
  font-size: 24rpx;
  font-weight:400;
  text-decoration:line-through;
  color:rgba(153,153,153,1);
}
.course-list-item-btn{
  display: flex;
  justify-content: flex-end;
}
.course-list-item-btn>text{
  display: flex;
  align-items: center;
  justify-content: center;
  width:110rpx;
  height:45rpx;
  background:linear-gradient(0deg,rgba(251,59,57,1),rgba(255,161,148,1));
  border-radius:23rpx;
  font-size: 24rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}
/* 个人简介 */
.teacher{
  width: 100%;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
}
.teacher-center{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0;
  display: flex;
  align-items: flex-start;
}
.teacher-center>image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}
.teacher-center-nr{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.teacher-center-nr-text{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
}
.teacher-center-nr-name{
  display: flex;
  align-items: center;
}
.teacher-center-nr-name>text{
  font-size: 30rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.teacher-center-nr-name>view{
  width:105rpx;
  height:30rpx;
  border:1rpx solid rgba(236,37,37,1);
  border-radius:4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight:400;
  color:rgba(236,37,37,1);
  margin-left: 20rpx;
}
.teacher-center-nr-js{
  font-size: 26rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-top: 20rpx;
}
.teacher-center-nr-time{
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  font-weight:400;
  color:rgba(64,67,85,1);
}
.teacher-center-nr-jz{
  width: 100%;
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 15rpx 0;
  border-top: 2rpx solid #f6f6f6;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.teacher-center-nr-jz>image{
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
  margin: 10rpx;
}
/* 项目评价 */
.evaluate{
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding-top: 40rpx;
}
.evaluate-list{
  width: 100%;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.evaluate-list-item{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f6f6f6;
}
.evaluate-list-item:last-of-type{
  border-bottom: none;
}
.evaluate-list-user{
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
}
.evaluate-list-user>image{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.user-name{
  font-size: 24rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.evaluate-star{
  display: flex;
  align-items: center;
  position: absolute;
  right: 0;
}
.evaluate-star>image{
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}
.evaluate-list-content{
  width: 100%;
  text-align: justify;
  font-size: 26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-top: 25rpx;
}
.evaluate-list-img{
  width: 100%;
  display: grid;
  grid-template-columns: repeat(4, 165rpx);
  grid-row-gap: 10rpx;
  grid-column-gap: 10rpx;
  margin-top: 25rpx;
}
.evaluate-list-img-nr{
  height: 165rpx;
}
.evaluate-list-img-nr>image{
  width: 100%;
  height: 100%;
}
.evaluate-list-time{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  font-size: 22rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
/* 项目介绍 */
.introduce{
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx 30rpx 30rpx;
}
.introduce-nr{
  width: 100%;
  margin-top: 40rpx;
}
.introduce-nr>image{
  width: 100%;
}
/* 奖状弹窗 */
.model{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 60rpx;
}
.model-nr{
  position: relative;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
  padding: 60rpx 0;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.model-nr>image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 15rpx;
}
.model-nr>view{
  font-size: 28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}