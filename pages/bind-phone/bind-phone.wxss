/* pages/bind-phone/bind-phone.wxss */
.box{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
/* 手机号 */
.phone{
  width: 100%;
  height: 98rpx;
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.phone>text{
  font-size: 28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  display: block;
  margin-right: 30rpx;
}
.phone>input{
  flex: 1;
  font-size: 28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.inps{
  font-size: 28rpx;
  font-weight:400;
  color:#999;
}
/* 验证码 */
.yzm{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}
.yzm-left{
  width: 60%;
  height: 98rpx;
  display: flex;
  align-items: center;
  background:rgba(255,255,255,1);
  box-sizing: border-box;
  padding: 0 30rpx;
}
.yzm-left>text{
  font-size: 28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-right: 30rpx;
}
.yzm-left>input{
  flex: 1;
  font-size: 28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.yzm-right{
  width: 30%;
  height: 98rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background:rgba(255,255,255,1);
  font-size: 28rpx;
  font-weight:400;
  color:rgba(236,37,37,1);
}
/* 按钮 */
.btn{
  width: 100%;
  height:88rpx;
  margin-top: 80rpx;
  background:linear-gradient(0deg,rgba(251,59,57,1),rgba(255,161,148,1));
  border-radius:44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
}