/* pages/fabiaopingjia/fabiaopingjia.wxss */
.box{
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}
/* 项目信息 */
.order-content{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  background-color: #fff;
}
.order-nr{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
}
.order-nr>image{
  width: 267rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.order-text{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
}
.order-name{
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 30rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-top: 5rpx;
}
.order-time{
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight:400;
  color:rgba(64,67,85,1);
}
.order-price{
  position: absolute;
  bottom: 2rpx;
  font-size: 36rpx;
  color:rgba(236,37,37,1);
}
/* 总体评价 */
.all{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  background-color: #fff;
  margin-top: 2rpx;
}
.all-content{
  width: 100%;
  display: flex;
  align-items: center;
}
.all-content>text{
  font-size: 30rpx;
  color:rgba(51,51,51,1);
  margin-right: 50rpx;
}
.all-star{
  flex: 1;
  display: flex;
  align-items: center;
}
.star{
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 60rpx;
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.star>view{
  width: 50%;
  height: 100%;
  position: absolute;
  z-index: 3;
}
.star-left{
  left: 0;
  /* background-color: red;
  opacity: 0.2; */
}
.star-right{
  right: 0;
  /* background-color: blue;
  opacity: 0.2; */
}
.star>image{
  width: 48rpx;
  height: 48rpx;
  position: relative;
  z-index: 1;
}
/* 评价内容 */
.pingjia{
  width: 100%;
  margin-top: 2rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background: #fff;
}
/* 评价输入框 */
.pingjia-inp{
  width: 100%;
}
.pingjia-inp>textarea{
  width: 100%;
  min-height: 200rpx !important;
  font-size: 30rpx;
  color: #333;
}
.inps{
  font-size: 30rpx;
  color:rgba(163,163,163,1);
}
/* 上传图 */
.sc-img{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 30rpx;
}
.sc-img-item{
  width: 100%;
  display: grid;
  grid-template-columns: repeat(4, 165rpx);
  grid-row-gap: 10rpx;
  grid-column-gap: 10rpx;
}
.sc-img>text{
  display: block;
  font-size: 26rpx;
  color:rgba(153,153,153,1);
  margin-top: 25rpx;
}
.sc-img-nr{
  height: 165rpx;
  position: relative;
  z-index: 1;
}
.sc-img-nr>.imgs{
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
}
.sc-img-nr>.del-img{
  position: absolute;
  z-index: 3;
  width: 29rpx;
  height: 29rpx;
  top: -5rpx;
  right: -5rpx;
}
/* 按钮 */
.btn{
  width: 100%;
  height:98rpx;
  background:rgba(251,59,57,1);
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
}