/**index.wxss**/
page{
  background-color: #fff;
}
.box{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* top */
.top{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.top-nr{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* input */
.top-inp{
  width: 100%;
  height: 68rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #F6F6F6;
  border-radius: 34rpx;
  margin: 20rpx 0;
}
.top-inp>image{
  width: 29rpx;
  height: 29rpx;
}
.top-inp>input{
  flex: 1;
  margin-left: 20rpx;
  font-size: 28rpx;
  color:#333;
}
.inps{
  font-size:28rpx;
  color:#B9B9B9;
}
/* banner */
.top-banner{
  width: 100%;
  height: 280rpx;
  margin-top: 10rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  z-index: 2;
}
/* banner指示点 */
.banner-dot{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  z-index: 4;
  bottom: 25rpx;
}
.banner-dot-item{
  width:12rpx;
  height:12rpx;
  background:#fff;
  opacity:0.5;
  border-radius:50%;
  margin: 0 8rpx;
  transition: 0.6s;
}
.banner-dot>.banner-dot-item-active{
  width:45rpx;
  height:12rpx;
  background:#fff;
  border-radius:6rpx;
  opacity: 1;
  margin: 0 8rpx;
}
/* swiper */
.top-banner>swiper{
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 3;
}
.swiper-item{
  width: 100%;
  height: 100%;
}
.swiper-item>image{
  width: 100%;
  height: 100%;
}
/* icon图标 导航 */
.icon-nav{
  width: 100%;
  height: 360rpx;
  margin-top: 60rpx;
}
.icon-nav>swiper{
  width: 100%;
  height: 100%;
}
.swiper-icon{
  width: 100%;
  height: 100%;
}
.icon-nav-nr{
  width: 100%;
  height: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 25rpx 0;
}
.icon-nav-nr-icon{
  width: 100%;
  display: grid;
  grid-template-columns: repeat(5, 20%);
  grid-row-gap: 40rpx;
  /* grid-column-gap: 57rpx; */
}
.icon-nav-nr-icon>view{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icon-nav-nr-icon>view>image{
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 15rpx;
}
.icon-nav-nr-icon>view>text{
  font-size: 24rpx;
  color: #656565;
}
.icon-dots{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon-dots-item{
  width:25rpx;
  height:4rpx;
  background:#DBDBDB;
  border-radius:2rpx;
  transition: 0.3s;
}
.icon-dots>.icon-dots-item-active{
  width:25rpx;
  height:4rpx;
  background:#EC2525;
  border-radius:2rpx;
}
/* 标题 */
.title{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.title>text{
  font-size: 36rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.title-more{
  display: flex;
  align-items: center;
}
.title-more>text{
  font-size: 24rpx;
  color: #999999;
  font-family:PingFang SC;
}
.title-more>image{
  width: 11rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
/* 精选项目 */
.jxxm{
  width: 100%;
  margin-top: 80rpx;
}
.jxxm-center{
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  margin-top: 40rpx;
}
.jxxm-center-nr{
  /* width: 100%; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.jxxm-center-item{
 box-sizing: border-box;
 padding-right: 30rpx;
}
.jxxm-center-item>image{
  width: 430rpx;
  height: 242rpx;
  border-radius: 10rpx;
}
.jxxm-center-item-text{
  width: 100%;
  box-sizing: border-box;
  padding: 0 25rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 25rpx;
}
.jxxm-center-item-text>view{
  font-size: 30rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 10rpx;
}
.jxxm-center-item-text>text{
  font-size: 24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
/* 最新项目 */
.zxxm{
  width: 100%;
  margin-top: 80rpx;
}
.zxxm-list{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 39rpx;
}
.zxxm-list-item{
  width: 100%;
  height: 388rpx;
  position: relative;
  z-index: 1;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}
.zxxm-list-item:last-of-type{
  margin-bottom: 0;
}
.zxxm-list-item-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 3;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 10rpx;
}
.zxxm-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  right: 0;
  border-radius: 10rpx;
}
.zxxm-bq{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  z-index: 4;
  right: 0;
  top: 0;
}
.zxxm-list-item-text{
  position: absolute;
  z-index: 5;
  left: 40rpx;
  bottom: 60rpx;
  font-size: 36rpx;
  font-weight:bold;
  color:#fff;
  letter-spacing: 2rpx;
}
/* 火热类别 */
.hrlb{
  width: 100%;
  margin-top: 80rpx;
}
.hrlb-nav{
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  margin-top: 39rpx;
}
.hrlb-nav-list{
  /* width: 100%; */
  display: flex;
  align-items: center;
}
.hrlb-nav-list-item{
  box-sizing: border-box;
  padding-right: 78rpx;
}
.hrlb-nav-list-item-nr{
  min-width: 70rpx;
  height: 62rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  position: relative;
}
.hrlb-nav-list-item-nr>text{
  font-size: 32rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.hrlb-nav-list-item-nr>view{
  width:40rpx;
  height:4rpx;
  background:#EC2525;
  border-radius:2rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -20rpx;
  display: none;
}
.hrlb-nav-list-item-nr>.hrlb-nav-active{
  color: #EC2525;
  display: block;
}
/* 火热类别列表 */
.hrlb-list{
  width: 100%;
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.hrlb-list-item{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f6f6f6;
}
.hrlb-list-item>image{
  width: 267rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 25rpx;
}
.hrlb-list-item-text{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  position: relative;
}
.hrlb-list-item-text>view{
  width: 100%;
  margin-top: 5rpx;
  font-size: 30rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.hrlb-list-item-text>text{
  display: block;
  position: absolute;
  bottom: 5rpx;
  font-size: 36rpx;
  font-weight:bold;
  color:rgba(236,37,37,1);
}