/* pages/login/login.wxss */
.box{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box>image{
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
  margin-bottom: 60rpx;
}
.box>text{
  font-size: 40rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.btn{
  width:690rpx;
  height:88rpx;
  background:linear-gradient(0deg,rgba(251,59,57,1),rgba(255,161,148,1));
  border-radius:44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
  margin-top: 230rpx;
}
.btn>image{
  width: 57rpx;
  height: 46rpx;
  margin-right: 20rpx;
  position: relative;
  z-index: 2;
}
.btn>text{
  position: relative;
  z-index: 2;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
}
.btn>button{
  position: absolute;
  z-index: 3;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100% !important;
  height: 100% !important;
  margin: 0 !important;
  padding: 0;
  border: none !important;
}