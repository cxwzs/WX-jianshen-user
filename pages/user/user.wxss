/* pages/user/user.wxss */
.box{
  width: 100%;
  margin-top: 88rpx;
}
.tx{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tx-img{
  width: 120rpx;
  height: 120rpx;
  position: relative;
  z-index: 1;
  border-radius: 50%;
}
.tx-img-nr{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: relative;
  z-index: 2;
}
.tx-camera{
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  z-index: 3;
  bottom: -20rpx;
  right: -20rpx;
}
/* 昵称 */
.name{
  width: 100%;
  height: 104rpx;
  margin-top: 47rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.name>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.name>input{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: right;
}
.inps{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
/* 绑定手机号 */
.bind{
  width: 100%;
  height: 104rpx;
  margin-top: 10rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bind>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.bind-nr{
  display: flex;
  align-items: center;
}
.bind-nr>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.bind-nr>image{
  width: 20rpx;
  height: 30rpx;
  margin-left: 25rpx;
}
/* 保存 按钮 */
.btn{
  width: 100%;
  height:98rpx;
  background:rgba(251,59,57,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color:rgba(255,255,255,1);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
}