/* pages/pay/pay.wxss */
.box{
  width: 100%;
}
.pay{
  width: 100%;
  height: 104rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.pay-wx{
  display: flex;
  align-items: center;
}
.pay-wx>image{
  width: 42rpx;
  height: 42rpx;
  margin-right: 20rpx;
}
.pay-wx>text{
  font-size: 28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.pay>image{
  width: 36rpx;
  height: 36rpx;
}
/* 底部按钮 */
.btn{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #FFFFFF;
}
.btn-left{
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
  align-items: flex-start;
}
.btn-left>text{
  font-size: 24rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-top: 8rpx;
}
.btn-left-nr{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.btn-left-nr>view{
  font-size: 36rpx;
  color: #EC2525;
}
.btn-left-nr>text{
  font-size: 20rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.btn-right{
  width: 250rpx;
  height: 100%;
  background:rgba(236,37,37,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}