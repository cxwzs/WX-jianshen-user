/* pages/mine/mine.wxss */
.box{
  width: 100%;
}
.top{
  width: 100%;
  height: 256rpx;
  position: relative;
  z-index: 1;
}
.top-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
}
.top-content{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 3;
  display: flex;
  align-items: center;
  justify-content: center
}
.top-nr{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.top-nr>image{
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}
.top-nr>text{
  font-size: 32rpx;
  font-weight:400;
  color:rgba(255,254,254,1);
}
/* 菜单 */
.list{
  width: 100%;
}
.list-item{
  width: 100%;
  height: 104rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  background-color: #fff;
}
.list-item>image{
  width: 20rpx;
  height: 32rpx;
}
.list-nr{
  display: flex;
  align-items: center;
}
.list-nr>image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.list-nr>text{
  font-size: 30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}